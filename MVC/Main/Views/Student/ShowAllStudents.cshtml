@using Main.Models.Entity; 
@model IList<Student>

<table class="table table-bordered table-hover">
    <th>
        <td>Id</td>
        <td>Name</td>
        <td>ImageURL</td>
        <td>StudentURL</td>
    </th>
    @{
        int counter = 1;
    }
    @foreach(Student student in Model){
        <tr>
            <td>@(counter++)</td>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td><img src=/@student.ImageURL></td>
            <td><a href="/Student/GetStudentById?Id=@student.Id">Link</a></td>
        </tr>
    }
</table>